#!/usr/bin/env ruby

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

bin_dir = File.expand_path("..", __FILE__)
puts "Building mcrypt at dir #{bin_dir}"
puts ""
puts "*"
puts __FILE__
puts ARGV[0]
puts ARGV[1]
puts "*"
puts `cd /; ls -l`
puts "*"
puts `cd #{ARGV[1]}; ls -l`
puts "*"
puts `cd #{bin_dir}; ls -l`
puts "*"
puts "#{`cd #{ARGV[0]}; ls`}"
puts "*"
puts "Building mcrypt to BinDir: #{bin_dir}"
`cd #{bin_dir}; build-mcrypt #{bin_dir}`
puts `ls /app/vendor/`
puts `ls /app/vendor/mcrypt`
puts "mcrypt built"

LanguagePack::Instrument.trace 'compile', 'app.compile' do
  if pack = LanguagePack.detect(ARGV[0], ARGV[1])
    pack.topic("Compiling #{pack.name}")
    pack.log("compile") do
      pack.compile
    end
  end
end
puts "mcrypt still exists?"
puts `ls /app/vendor/`
puts `ls /app/vendor/mcrypt`

